<div class="col-md-4">
    <div class="card">
        <div class="card-block">
            <img class="card-img-top" src="<%= menu_item.image_url %>" />
            <h3 class="card-title"><%= menu_item.name %></h3>
            <p class="card-text"><%= menu_item.description %></p>
        </div>
        <div class="card-block order-bar">
            <a href="#" class="btn text-success price"><%= number_to_currency menu_item.price, unit: 'VND', format: '%n %u' %></a>
            <a href="#" class="btn btn-primary-outline pull-right">Order</a>
        </div>
    </div>
</div>